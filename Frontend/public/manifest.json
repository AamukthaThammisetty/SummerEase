{
  "manifest_version": 3,
  "name": "SummarEase",
  "version": "1.0.0",
  "description": "A web summarizer with screenshot feature.",
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
 
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "action": {
    "default_popup": "index.html"
  }
}
